{
  "name": "strapi-ts",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "app": "yarn workspace @strapi-ts/app",
    "source": "yarn workspace @strapi-ts/source",
    "start": "yarn app start",
    "dev": "yarn concurrently -n ts,strapi --restart-tries -1 \"yarn build --watch\" \"yarn app develop\"",
    "test": "yarn build && yarn app test",
    "test:e2e": "yarn build && yarn app test:e2e",
    "build": "yarn tsup",
    "prepare": "husky install",
    "preinstall": "node preinstall",
    "api": "node -r ./esbuild.register.js ./scripts/api.ts",
    "schema": "node -r ./esbuild.register.js ./scripts/schema.ts",
    "policy": "node -r ./esbuild.register.js ./scripts/policy.ts"
  },
  "workspaces": {
    "packages": [
      "strapi",
      "app"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\", \"debug\"] }]' --max-warnings=0",
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\", \"debug\"] }]' --max-warnings=0",
      "bash -c \"tsc --noEmit\"",
      "prettier --ignore-path .eslintignore --write"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "devDependencies": {
    "@babel/parser": "^7.14.9",
    "@babel/traverse": "^7.14.9",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "pirates": "^4.0.1",
    "prettier": "^2.3.2",
    "tsup": "^4.13.1",
    "typescript": "^4.3.5"
  }
}
