{
  "name": "strapi-ts",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "app": "yarn workspace @strapi-ts/app",
    "source": "yarn workspace @strapi-ts/source",
    "start": "yarn app start",
    "dev": "yarn concurrently -n ts,strapi \"yarn tsup --watch\" \"yarn app develop\"",
    "build": "yarn tsup",
    "postinstall": "node tsup.patch.js"
  },
  "workspaces": {
    "packages": [
      "strapi",
      "app"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "tsup": "^4.12.5"
  }
}
